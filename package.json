{
  "name": "shortlist-template",
  "version": "1.0.0",
  "description": "Dummy Template for DynamoDB, API and Lambda functions",
  "scripts": {
    "ci-install": "npm install",
    "build:webpack": "rimraf ./build && serverless webpack --out build -d",
    "build:tsc": "rimraf ./build && tsc",
    "debug-register-candidate-workflow": "node $NODE_DEBUG_OPTION /usr/local/bin/serverless invoke local -f registerCandidatesAndEmailPostRegistration -p src/main/serverless/amiti/updateEvent.json",
    "debug-all-candidate-workflow": "node $NODE_DEBUG_OPTION /usr/local/bin/serverless invoke local -f getAllCandidatesFunction -p src/main/serverless/amiti/emptyEvent.json"
  },
  "main": "handler.js",
